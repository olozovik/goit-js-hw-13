{{#each this}}
  <div class='photo-card'>
    <a class='image-link' href='{{largeImageURL}}'>
      <div id='image-thumb' class='image-thumb'>
        <img src='{{webformatURL}}' alt='{{tags}}' loading='lazy' />
      </div>
    </a>
    <div class='info'>
      <p class='info-item'>
        <b>Likes</b>
        <span>{{likes}}</span>
      </p>
      <p class='info-item'>
        <b>Views</b>
        <span>{{views}}</span>
      </p>
      <p class='info-item'>
        <b>Comments</b>
        <span>{{comments}}</span>
      </p>
      <p class='info-item'>
        <b>Downloads</b>
        <span>{{downloads}}</span>
      </p>
    </div>
  </div>
{{/each}}